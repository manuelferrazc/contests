   "source": [
    "mod = 1_000_000_007\n",
    "\n",
    "def fexp(n,e=mod-2):\n",
    "    global mod\n",
    "    if e==0: return 1\n",
    "    r = fexp(n,e//2)\n",
    "    r = r*r%mod\n",
    "    if e%2==1: r = r*n%mod\n",
    "    return r"
   ]
